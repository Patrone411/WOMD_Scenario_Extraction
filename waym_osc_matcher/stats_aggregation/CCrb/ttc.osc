import standard.osc

scenario top:
    ego_vehicle: vehicle
    npc: vehicle


    do serial:
        get_close: parallel(duration: [4s..9s]):
            npc.drive() with:
                speed([30kph..60kph], at: start)
                keep_lane()
                acceleration([-6meter_per_sec_sqr..-2meter_per_sec_sqr], at: end)
            ego_vehicle.drive() with:
                speed([30kph..60kph], at: start)

                lane(same_as: npc)
                keep_lane()
                #position([0m..150m], behind: other_car)
                position([10m..50m], behind: npc, at: start)
                until rise(ego_vehicle.time_to_collision(reference: npc) < 5s)
